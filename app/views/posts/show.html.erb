<div class="container">
<h1><%= @post.title %></h1>
<h5><a href="<%= @post.url %>" target="_blank">Go to webpage</a> |<% if current_user %> <%= link_to "edit", edit_post_path(@post) %> | <%= link_to "delete", post_path(@post), method: :delete, data:{confirm: "Do you really want to kill it?"} %> <% end %></h5>
<h2>Comments</h2>
<%= render partial: 'posts/comment', collection: @post.comments.reverse %>
<% if current_user%>
<%= render partial: 'comments/form' %>
<% else %>
<p> <%= link_to 'Log in', new_session_path %> to leave a comment </p>
<% end %>

</div>

